
{basic_node, [
    {startup, [
        {handler, systest_slave}
    ]},
    {flags, [
        {start, "-boot start_sasl +W w "
                "+K true +A30 +P 1048576 "
                "-pa ebin "
                "-sasl sasl_error_logger false"}
    ]}
]}.

{bad_cli, [
    {startup, [
        {handler, systest_cli},
        {detached, false}
    ]},
    {flags, [
        {start, [
            {program, "this-script-does-not-exists"}
        ]},
        {stop, [
            {program, "neither-does-this"},
            {args, ["stop", "-n", "${node.id}"]}
        ]}
    ]}
]}.

